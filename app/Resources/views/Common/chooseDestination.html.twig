
<div class="modal fade" id="selectChapter" tabindex="-1" role="dialog" aria-labelledby="selectChapterModalLabel">
    <form class="modal-dialog" role="document" action="{{ path('select_chapter') }}" method="post" data-digital-pad data-digit-length="3">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="selectChapterModalLabel">{{ 'goto_title'|trans }}</h4>
            </div>
            <div class="modal-body">
                <div>
                    <div class="form-group">
                        <label for="destination" class="control-label">{{ 'goto_description'|trans }}</label>
                        <input type="text" class="form-control" name="destination" id="destination" data-digit-input>
                    </div>
                </div>
            </div>
            {% include ':Common:pad.html.twig' %}
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'close_button'|trans }}</button>
                <button type="submit" class="btn btn-primary" value="Submit">{{ 'goto_confirmation'|trans }}</button>
            </div>
        </div>
    </form>
</div>
