{% extends '::base.html.twig' %}

{% block title %}{{ 'her_life_management_title'|trans({ '%game_label%': 'game_label'|trans}, 'seo') }}{% endblock %}

{% block body_content %}
        <div class="container">

            <form class="form-signin form-hero form-horizontal">
                <h2 class="form-signin-heading">Hero Life</h2>
                <div class="row row-padding-after text-center">
                    {% set lifeCurrent = lifeCurrent|default(1) %}
                    {% set lifeMax = lifeMax|default(55) %}
                    {% include ':Common:lifeStatus.html.twig' %}
                </div>
                <div class="form-group has-success has-feedback">
                    <label class="control-label col-sm-6 col-xs-6 text-uppercase" for="inputGroupSuccess2">Current</label>
                    <div class="col-sm-6 col-xs-6">
                        <div class="input-group">
                            <span class="input-group-addon text-uppercase"><strong>H</strong></span>
                            <input type="text" class="form-control" id="inputGroupSuccess2" aria-describedby="inputGroupSuccess2Status">
                        </div>
                    </div>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
            </form>

        </div> <!-- /container -->
{% endblock %}


